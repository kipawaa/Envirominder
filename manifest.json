{
        "manifest_version": 3,
        "name": "Envirominder",
        "version": "0.0.0.4",
        "description": "a daily reminder to be kind to the planet",

        "permissions": ["storage", "notifications"],

        "background": {
                "service_worker": "background.js"
        },

        "action": {
                "default_popup": "popup.html",
                "default_icon": "envirominder icon-128.png"
        },

        "icons": {
                "16": "envirominder icon-16.png",
                "48": "envirominder icon-48.png",
                "128": "envirominder icon-128.png"
        }
}
